body {
	margin:0;
	padding:0;
	font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
}
.container {
	position:absolute;
	top:0;
	width:100%;
	min-height:100%;
	margin:0;
	padding:0;
	height:auto;
	background-image:url('http://res.cloudinary.com/dk62rqvu7/image/upload/v1498556412/02_YOKO-0324B_Portal-desktop-TITLE-CROP_2x_bign6p.jpg');
	background-size:contain;
	background-position: center top;
	background-repeat:no-repeat;
	text-align:center;
	z-index:0;background-color:#000;
}
.container2 {
	position:absolute;
	margin: auto;
    top: 17vmin;
    height: 35vh;
	padding:0;
	width:auto;
	/*background-image:url('http://res.cloudinary.com/dk62rqvu7/image/upload/v1498526149/Heading_i3xpd1.png');*/
	background-size:contain;
	background-repeat:no-repeat;
	background-position: center top;
	text-align:center;
	z-index:1;
}
.entryform{
	line-height:2em;
	position:relative;
	z-index:3;
	margin:auto;
	width:50%;
	min-width:760px;
padding:1em;
padding-bottom:4vw;
	background: #e31f26;
	-webkit-box-shadow: 0px 0px 128px 2px rgba(255,255,255,0.48);
-moz-box-shadow: 0px 0px 128px 2px rgba(255,255,255,0.48);
box-shadow: 0px 0px 128px 2px rgba(255,255,255,0.48);
margin-top:43vmax;
margin-bottom:15vw;
border:1px solid #debd64;
color: #FFF;
}

.entryform * {
border-radius:0;
}

h1{
font-size:23pt;
margin:auto;
max-width:20em;
margin-top: 4vw;
margin-bottom:4vw;
}

label, .disclaimer {
		font-weight: 100;
		font-size: 15.9pt;
}
.form-control {
	height:3em;
}
.form-inputs, .disclaimer, .disclaimer2, hr {
		text-align:left;
	max-width:46%;
	margin:auto;
}

.disclaimer, .disclaimer2{
	text-align:center;
	font-weight:bold;
	margin-top:4em;
	margin-bottom:1em;
}
.disclaimer2{
	margin-top:1em;
	font-weight: 100;
		font-size: 13.9pt;
}
.disclaimer2 a, .disclaimer2 a:hover{
	color: #FFF;
	text-decoration:underline;
}
.bootstrap-datetimepicker-widget * {
	color: #000;
}
.datetimepicker .input-group-btn {
	position:absolute;
	z-index:5;
}
.datetimepicker .input-group-btn, .datetimepicker .btn{
	    border: none;
    background: transparent;
    box-shadow: none;
}
.entry_sale_date, .entry_sale_time {
	display:inline-block;
	max-width: 49%;
}
#entry_sale_date, #entry_sale_time {
padding-left:3em;
}
.boolean{
	font-size: 13.9pt;
}

#new_user{
	background: #FFF;
	padding:1em;
	max-width:60%;
	margin:auto;
}

input.btn.btn-default{
	width:46%;
	/* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#ffa504+0,ffff8a+50,ffa504+100 */
background: #ffa504; /* Old browsers */
background: -moz-linear-gradient(left, #ffa504 0%, #ffff8a 50%, #ffa504 100%); /* FF3.6-15 */
background: -webkit-linear-gradient(left, #ffa504 0%,#ffff8a 50%,#ffa504 100%); /* Chrome10-25,Safari5.1-6 */
background: linear-gradient(to right, #ffa504 0%,#ffff8a 50%,#ffa504 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffa504', endColorstr='#ffa504',GradientType=1 ); /* IE6-9 */
	border:6px solid #debd64;
	text-shadow:none;
	box-shadow:none;
	font-size: 15.9pt;
}

#notice {
    color: #00cccc;
    font-size: 2em;
    line-height:2em;
}
#new_user, .table, .btn{
	position:relative;
	z-index:5;
}
@media screen and (min-width:901px){
	.container2{
		width:80%;
		left:10%;
	}
}
@media screen and (max-device-width:1100px){
	.container2{
		width:100%;
		/*left:0;*/
		/*background-size:cover;	*/
	}
.entryform{
	width:79%;
	margin-top:50vmin;
}
}