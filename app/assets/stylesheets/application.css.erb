body {
	margin:0;
	padding:0;
	font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
}
.container {
	position:absolute;
	top:0;
	width:100%;
	min-height:100%;
	margin:0;
	padding:0;
	height:auto;
	background-image:url(<%= asset_path 'background.png' %>);
	background-size:cover;
	background-position: center top;
	text-align:center;
}
.entryform{
	line-height:2em;
	margin:auto;
	width:50%;
padding:1em;
padding-bottom:4vw;
	background: #917240;
	-webkit-box-shadow: 0px -62px 128px 2px rgba(255,255,255,0.48);
-moz-box-shadow: 0px -62px 128px 2px rgba(255,255,255,0.48);
box-shadow: 0px -62px 128px 2px rgba(255,255,255,0.48);
margin-top:48%;
margin-bottom:15vw;
border:1px solid #debd64;
color: #FFF;
}

.entryform * {
border-radius:0;
}

h1{
font-size:23pt;
margin:auto;
max-width:20em;
margin-top: 4vw;
margin-bottom:4vw;
}

label, .disclaimer {
		font-weight: 100;
		font-size: 15.9pt;
}
.form-control {
	height:3em;
}
.form-inputs, .disclaimer, .disclaimer2, hr {
		text-align:left;
	max-width:46%;
	margin:auto;
}

.disclaimer, .disclaimer2{
	text-align:center;
	font-weight:bold;
	margin-top:4vw;
	margin-bottom:4vw;
}
.disclaimer2{
	margin-top:0;
	font-weight: 100;
		font-size: 13.9pt;
}
.disclaimer2 a, .disclaimer2 a:hover{
	color: #FFF;
	text-decoration:underline;
}
.bootstrap-datetimepicker-widget * {
	color: #000;
}
.datetimepicker .input-group-btn {
	position:absolute;
	z-index:5;
}
.datetimepicker .input-group-btn, .datetimepicker .btn{
	    border: none;
    background: transparent;
    box-shadow: none;
}
.entry_sale_date, .entry_sale_time {
	display:inline-block;
	max-width: 49%;
}
#entry_sale_date, #entry_sale_time {
padding-left:3em;
}
.boolean{
	font-size: 13.9pt;
}

#new_user{
	background: #FFF;
	padding:1em;
	max-width:60%;
	margin:auto;
}

input.btn.btn-default{
	width:46%;
	background: #00ffff;
	border:6px solid #debd64;
	text-shadow:none;
	box-shadow:none;
	font-size: 15.9pt;
}

@media screen and (max-device-width:900px){
.entryform{
	width:72%;
	margin-top:74%;
}
}